{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/BloggingPlatform.Api/bin/Debug/net8.0/BloggingPlatform.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/BloggingPlatform.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "hotReloadEnabled": true,
            "hotReloadProfile": "aspnetcore"
        }
    ]
}